regions :
 	House : String;
 	HousingCommunity : String;
	
structs:
	TempStruct
		tempValue : double;
		unitOfMeasurement: String;
	
	SmokePresenceStruct
		smokePresence : boolean;
		timeStamp : long;

abilities:
	sensors:
		TemperatureSensor
			generate tempMeasurement : TempStruct ;
		
		SmokeDetector
			generate smokePresence : SmokePresenceStruct;
		
	actuators:
		Door
			action Unlock();

		Alarm
			action On();
			action Off();
		
		Sprinkler
			action On();
			action Off();
	
		Light
			action On();
			action Off();