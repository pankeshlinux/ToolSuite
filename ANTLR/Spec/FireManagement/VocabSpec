regions :
 	House : String;
 	HousingCommunity : String;
	
structs:
	TempStruct
		tempValue : double;
		unitOfMeasurement: String;
	
	SmokePresenceStruct
		smokePresence : boolean;
		timeStamp : long;

abilities:
	sensors:
		TemperatureSensor
			generate tempMeasurement : TempStruct ;
		
		SmokeDetector
			generate smokePresence : SmokePresenceStruct;
		
	actuators:
		Door
			action Unlock();
			
		Alarm
			action Activate();
			action DeActivate(); 
				
		SprinklerSystem
			action Start();
			action Stop();
	
		Light
			action SwitchOn();
			action SwitchOff();