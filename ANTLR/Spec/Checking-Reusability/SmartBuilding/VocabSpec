regions :
	Center : String ;
	Floor :  String;
	Room : String;

structs:
	BadgeDetectedStruct
		badgeID : String;
		timeStamp : long;	
        
	BadgeDisappearedStruct
		badgeID : String;
		timeStamp : long;
        
	TempStruct
		tempValue : double;
		unitOfMeasurement : String;
	
	SmokePresenceStruct
		smokePresence : boolean;
		timeStamp : long;	
        
abilities:
	sensors:
		BadgeReader  
			generate badgeDetected : BadgeDetectedStruct;
			generate badgeDisappeared : BadgeDisappearedStruct;
			
		SmokeDetector
			generate smokePresence : SmokePresenceStruct;
		
		TemperatureSensor 
			generate  tempMeasurement : TempStruct;

	actuators:
		Heater
			action Off();
			action SetTemp(setTemp: TempStruct);
					
		Monitor
			action Display(displayTemp : TempStruct);			
		
		Door
			action Unlock();
			
		Alarm
			action Activate();
			action DeActivate(); 
				
		SprinklerSystem
			action Start();
			action Stop();
	
		Light
			action SwitchOn();
			action SwitchOff();	